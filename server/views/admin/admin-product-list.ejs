<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="../../product.css" />
  </head>
  <body>
    <%- include('../includes/nav.ejs') %>
    <main>
      <% if (prods.length > 0) { %>
        <h1>All Products</h1>
      <div class="grid">
        <% prods.forEach(prod =>  { %>
        <article class="card product-item">
          <div class="card__image">
            <!-- image -->
            <img src=<%= prod.imageUrl %> alt="product display">
          </div>
          <h1 class="product__title"> <%= prod.name %></h1>
          <div class="card__content">
            <span class="product__price">$<%= prod.price %></span>
            <p class="product__description"><%= prod.description %></p>
            <div>
              <a href='/admin/edit/<%= prod.id %>?edit=true'>Edit</a>
              <form action="/admin/delete" method="POST">
                <input type="hidden" value="<%= prod.id %>" name="id">
                <button type="submit">Delete</a>
              </form>
              
              <!-- <button class="btn">Add to Cart</button> -->
            </div>
          </div>
        </article>
        <% }) %> 
      </div>
    <% } else { %> 
      <h1> No Products Found </h1>  
      <% } %> 
    </main>
<%- include('../includes/end.ejs') %>