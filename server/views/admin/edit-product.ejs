<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="../../product.css">
    <link rel="stylesheet" href="../../main.css">
  </head>
  <body>
    <%- include('../includes/nav.ejs') %>

    <main>
      <h2>Edit product</h2>
      <form class="product-form" method="POST" action="/admin/edit">
        <div class="form-control">
          <img src="<%=product.imageUrl%>" alt="<%= product.name %>" width="350">
        </div>
        <div class="form-control">
          <input type="hidden" value="<%= product.id%>" name="id"/>
          <label for="name">Product Name: </label>
          <input type="text" value="<%= product.name %>"  id="name" name="name" required/>
        </div>
        <div class="form-control">
          <label for="imageUrl">Image Url: </label>
          <input type="text" value="<%= product.imageUrl %>" id="imageUrl" name="imageUrl" required/>
        </div>
        <div class="form-control">
          <label for="price">Price: </label>
          <input type="number" id="price" name="price" value="<%= product.price %>" required/>
        </div>
        <div class="form-control">
          <label for="description">Description: </label>
          <textarea rows="5" id="description" value="<%= product.description %>" placeholder="<%= product.description %>" name="description" required ><%= product.description %></textarea>
        </div>
        <div class="form-control">
          <button type="submit">Update Product</button>
        </div>
      </form>
    </main>
    <%- include('../includes/end.ejs') %> 
